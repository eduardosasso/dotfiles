        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "Option+L to Lock Screen (macOS 10.13+)",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "l",
                                    "modifiers": { "mandatory": ["option"] }
                                },
                                "to": [
                                    {
